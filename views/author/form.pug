extends ../layout

block content
    h1 #{title}

    form(method='POST')
        div.form-group
            label.mt-3(for='first_name') First Name:
            input#first_name.form-control(type='text', name='first_name', required, value=(author === undefined ? '' : author.first_name))

            label.mt-3(for='family_name') Family Name:
            input#family_name.form-control(type='text', name='family_name', required, value=(author === undefined ? '' : author.family_name))

            label.mt-3(for='date_of_birth') Date of Birth:
            input#date_of_birth.form-control(type='date', name='date_of_birth', value=(author === undefined ? '' : author.date_of_birth))

            label.mt-3(for='date_of_death') Date of Death:
            input#date_of_death.form-control(type='date', name='date_of_death', value=(author === undefined ? '' : author.date_of_death))

            button.btn.btn-primary.my-3(type='submit') Submit

        if errors
            ul.text-danger
                for error in errors
                    li!= error.msg
