extends ../layout

block content
    h1 #{title}: #{genre.name}

    if booksByGenre.length
        p #[strong Delete the following books before attempting to delete this genre.]
            div.ml-4.mt-4
                h4 Books

                dl
                each book in booksByGenre
                    dt
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
    else
        p Do you really want to delete this Genre?

        form(method='POST')
            div.form-group
                input#genreId.form-control(type='hidden', name='genreId', required, value=genre._id )

            button.btn.btn-primary(type='submit') Delete
