extends ../layout

block content
    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='name') Genre:
            input#name.form-control(type='text', name='name', placeholder='Fantasy, poetry, etc.', value=(genre === undefined ? '' : genre.name))
            button.btn.btn-primary.my-2(type='submit') Submit

        if errors
            ul.text-danger
                for error in errors
                    li!= error.msg
